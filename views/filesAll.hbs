<div class="container">
    <div class="col-12">
        <h2 class="my-5 text-center text-primary">Tumanlar Yukalgan Fayllari</h2>
        <table class="table table-hover table-bordered my-5">
            <thead>
                <tr class="bg-secondary text-light">
                    <th scope="col"># ID</th>
                    <th scope="col">Tuman</th>
                    <th scope="col">File</th>
                    <th scope="col">Date</th>
                    <th scope="col">Ko'rish</th>
                    <th scope="col">Exelga Qo'shish</th>
                    <th scope="col">O'chirish</th>
                </tr>
            </thead>
            <tbody> 
                {{#if files}}
                    {{#each files}}
                        <tr>
                            <th scope="row">{{_id}}</th>
                            <td>{{region}}</td>
                            <td>{{fileName}}</td>
                            <td>{{create_at}}</td>
                            <td>
                                <a href="{{./url}}{{fileName}}" class="btn btn-primary">Yuklash</a>
                            </td>
                            <td>
                                    {{#if status}}
                                        <button class="btn btn-secondary">Qo'shilgan</button> 
                                    {{else}}
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#{{_id}}">
                                            Qo'shish
                                        </button>

                                        <div class="modal fade" id="{{_id}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body text-center">
                                                    <h4>Faylni umumiy exel faylga qo'shsangiz keyin uni o'zgartira olmaysiz</h4>
                                                </div>
                                                <div class="modal-footer justify-content-center">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Qaytish</button>
                                                    <form action="/admin/file/addexel/{{_id}}" method="POST">
                                                        <button type="submit" class="btn btn-primary" >Qo'shish</button>
                                                    </form>
                                                </div>
                                                </div>
                                            </div>
                                        </div>
                                    {{/if}}
                            </td>
                            <td>
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#id{{_id}}">
                                    Delete
                                </button>

                                <div class="modal fade" id="id{{_id}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body text-center">
                                            <h4>Faylni o'chirsangiz keyin uni qayta tiklay olmaysiz</h4>
                                        </div>
                                        <div class="modal-footer justify-content-center">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Qaytish</button>
                                            <form action="/admin/file/delete/{{_id}}" method="POST">
                                                <button type="submit" class="btn btn-danger" >O'chirish</button>
                                            </form>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                    {{else}}
                    <tr>
                        <td colspan="8"><h2 class="text-center my-5 py-5">Hozircha Malumotlar Yo'q</h2></td>
                    </tr>
                {{/if}}
               
            </tbody>
        </table>
    </div>
</div>