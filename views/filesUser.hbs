<div class="container">
    <div class="col-12">
        <h2 class="my-5 text-center text-primary">Yukalgan Fayllariz</h2>
        <table class="table table-hover table-bordered my-5">
            <thead>
                <tr class="bg-secondary text-light">
                    <th scope="col"># ID</th>
                    <th scope="col">Tuman</th>
                    <th scope="col">File</th>
                    <th scope="col">Status</th>
                    <th scope="col">Date</th>
                    <th scope="col">Ko'rish</th>
                </tr>
            </thead>
            <tbody>
                {{#if files}}
                    {{#each files}}
                        <tr>
                            <th scope="row">{{_id}}</th>
                            <td>{{region}}</td>
                            <td>{{fileName}}</td>
                            <td>{{status}}</td>
                            <td>{{create_at}}</td>
                            <td><a href="{{./url}}{{fileName}}" class="btn btn-primary">Yuklash</a></td>
                        </tr>
                    {{/each}}
                    {{else}}
                    <tr>
                        <td colspan="8"><h2 class="text-center my-5 py-5">Hozircha Malumotlar Yo'q</h2></td>
                    </tr>
                {{/if}}
               
            </tbody>
        </table>
    </div>
</div>